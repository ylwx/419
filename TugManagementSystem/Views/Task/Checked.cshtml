<script type="text/javascript">
    var tableConfig = null;

    $(document).ready(Init);

    function Init() {
        {

            if (tableConfig == null) {
                GetTableConfig();
            }

            $("#jqGrid").jqGrid({
                url: "/Task/GetCheckedData2",
                mtype: "GET",
                datatype: "json",
                colModel: tableConfig.columns,
                viewrecords: true,
                //width: 780,
                height: '100%', //height: $(window).height() - 300,
                rowNum: 15,
                autowidth: true,
                editurl: '@Url.Action("", "")',
                pager: "#jqGridPager",
                //loadonce: true,
                rowList: ['15', '20', '30', '40', '50'],
                rownumbers: true,
                shrinkToFit: false,     //指定各列宽度
                sortable: true,          //列可移动
                colMenu: false,          //列菜单

                subGrid: true,
                subGridRowExpanded: showChildGrid2,
                subGridOptions: {
                    "plusicon": "ui-icon-triangle-1-e",
                    "minusicon": "ui-icon-triangle-1-s",
                    "openicon": "ui-icon-arrowreturn-1-e"
                },

                onSelectRow: function (rowid, status, e) {
                    //alert(rowid)
                    //alert(status);
                    var grid = $("#jqGrid");
                    var rowKey = grid.getGridParam("selrow");

                    if (!rowKey) {
                        $('#jqGrid_RepealSubmit').addClass('ui-state-disabled');
                        $('#jqGrid_RepealPass').addClass('ui-state-disabled');
                    }
                    else {
                        var id = $('#jqGrid').jqGrid('getGridParam', 'selrow');
                        var rowData = $('#jqGrid').jqGrid('getRowData', id);
                        var curPhase = rowData.Phase;
                        if (curPhase != -1)
                        {
                            $('#jqGrid_RepealSubmit').removeClass('ui-state-disabled');
                            $('#jqGrid_RepealPass').removeClass('ui-state-disabled');

                        }

                        //var selectedIDs = grid.getGridParam("selarrrow");
                        //if (selectedIDs.length != 1) {
                        //    $('#jqGrid_ilAdd').addClass('ui-state-disabled');
                        //    $('#jqGrid_ilView').addClass('ui-state-disabled');
                        //}
                        //else {
                        //    $('#jqGrid_ilAdd').removeClass('ui-state-disabled');
                        //    $('#jqGrid_ilView').removeClass('ui-state-disabled');
                        //}

                    }
                },

                gridComplete: function () {
                    var ids = $(this).getDataIDs();
                    for (var i = 0; i < ids.length; i++) {
                        //var Phase = $(this).getCell(ids[i], 'Phase');
                        var Status = $(this).getCell(ids[i], 'Status');
                        if (Status == "审核")  //已提交，未审核
                        {
                            $("#" + ids[i] + " td").css("background-color", "#DBDBDB");
                        }
                    }
                },
            });


            $('#jqGrid').jqGrid('filterToolbar', {
                searchResult: true,
                searchOperators: true,
                beforeSearch: function () {
                    //alert(1);
                    //alert($("#gs_Code").val());
                    var util = new Util();

                    var ret = true;

                    //日期

                    if ($("#gs_CreateDate").val() != null && $("#gs_CreateDate").val() != "")
                        ret = ret && util.isDateTime('@Resources.Language.CreateDate', $("#gs_CreateDate").val());
                    if ($("#gs_LastUpDate").val() != null && $("#gs_LastUpDate").val() != "")
                        ret = ret && util.isDateTime('@Resources.Language.LastUpDate', $("#gs_LastUpDate").val());

                    if ($("#gs_Amount").val() != null && $("#gs_Amount").val() != "")
                        ret = ret && util.isValidCurrency('@Resources.Language.V_Billing_Amount', $("#gs_Amount").val());
                    if ($("#gs_CreditNum").val() != null && $("#gs_CreditNum").val() != "")
                        ret = ret && util.isValidNaturalNumber('@Resources.Language.Credit', $("#gs_CreditNum").val());

                    @*if ($("#gs_BigTugNum").val() != null && $("#gs_BigTugNum").val() != "")
                    ret = ret && util.isValidNaturalNumber('@Resources.Language.V_OrderInfor_BigTugNum', $("#gs_BigTugNum").val());
                    if ($("#gs_MiddleTugNum").val() != null && $("#gs_MiddleTugNum").val() != "")
                        ret = ret && util.isValidNaturalNumber('@Resources.Language.V_OrderInfor_MiddleTugNum', $("#gs_MiddleTugNum").val());
                    if ($("#gs_SmallTugNum").val() != null && $("#gs_SmallTugNum").val() != "")
                        ret = ret && util.isValidNaturalNumber('@Resources.Language.V_OrderInfor_SmallTugNum', $("#gs_SmallTugNum").val());*@

                    //alert(ret); //ret为true，说明验证客户端验证通过，需要进行搜索；反之，不进行搜索
                    return !ret; //beforeSearch 返回true不触发搜索，false出发搜索
                }
            });


            // 撤销通过
            $("#RepealPass_btn").click(function () {
                var id = $('#jqGrid').jqGrid('getGridParam', 'selrow');
                var rowData = $('#jqGrid').jqGrid('getRowData', id);
                var curPhase = rowData.Phase;
                if (rowData.length) {
                    if (curPhase == -1) {
                        alert("已完成全部审核，无法撤销！");
                    }
                    else {
                        $.ajax(
                                                      {
                                                          type: "post",
                                                          url: "/Task/RepealPass",
                                                          data: { 'data': rowData },
                                                          traditional: true,
                                                          dataType: 'json',
                                                          success: function (result) {
                                                              alert(result.message);
                                                              $('#jqGrid').jqGrid('setGridParam', { datatype: 'json' }).trigger('reloadGrid');
                                                          },
                                                          error: function (result) {
                                                              console.log(result)
                                                              alert(result.message);
                                                          }
                                                      });
                    }

                }
                else { alert("未选择需要操作的数据！"); }
            })

            // 撤销提交
            $("#RepealSubmit_btn").click(function () {
                var rowid = jQuery('#jqGrid').jqGrid('getGridParam', 'selrow');
                var dr = jQuery('#jqGrid').jqGrid('getRowData', rowid);//选中行的数据
                if (rowid != null) {
                    if (confirm('确定要撤销提交吗?')) {
                        var d = new Date();
                        $.ajax(
                           {
                               type: "post",
                               url: "/Task/RepealSubmit",
                               data: { 'data': dr },
                               //traditional: true,
                               dataType: 'json',
                               success: function (result) {
                                   alert(result.message);
                                   $('#jqGrid').jqGrid('setGridParam', { datatype: 'json' }).trigger('reloadGrid');
                               },
                               error: function (result) {
                                   console.log(result)
                                   alert(result.message);
                               }
                           });
                    }

                }
                else { alert("未选择需要操作的数据！"); }
            })

            $('#jqGrid').jqGrid('filterToolbar', { searchResult: true, searchOperators: true });//搜索框

